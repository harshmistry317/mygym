<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_dashboard"
    android:background="@drawable/dashbord">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_admindash"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24_white" />
            <TextView
                android:id="@+id/tv_admin_dash_gymname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Gym Name"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/img_admindash"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"




                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

        </RelativeLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_admin_gymprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/ic_baseline_person_24"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gym Profile"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_Admin_edit_gym_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/ic_baseline_edit_24"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Gym Profile"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_Admin_addUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/adduser"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add User"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_Admin_updateUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/updateuser"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update user"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_Admin_deleteUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/delete"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete User"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_Admin_show_allUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/alluser"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show All User"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_Admin_set_user_diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/mydiet"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set User Diet"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_dash_Admin_set_user_workout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BCBFBF"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/myworkout"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set User Work out"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>
        
    </LinearLayout>

</ScrollView>